			"command": "sass src/scss/main.scss build/css/main.css",
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},{
			"label": "sass_watch-changes",
			"type": "shell",
			"command": "sass --watch src/scss:build/css",
