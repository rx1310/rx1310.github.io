			"group": {
				"kind": "build",
				"isDefault": true
			}
		},{
			"label": "sass_css-build-release",
			"type": "shell",
			"command": "sass src/scss/main.scss assets/styles/main.css",
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
